<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"

    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/dgEdit_edtTenLoaiSP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dgEdit_imgLoaiSP" />

    <ImageView
        android:id="@+id/dgEdit_imgLoaiSP"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginTop="24dp"
        android:src="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dgEdit_title" />

    <Button
        android:id="@+id/btnSuaLoaiSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Sửa"
        app:layout_constraintBottom_toBottomOf="@+id/btnHuySuaLoaiSP"
        app:layout_constraintEnd_toEndOf="@+id/dgEdit_edtTenLoaiSP"
        app:layout_constraintStart_toEndOf="@+id/btnHuySuaLoaiSP"
        app:layout_constraintTop_toTopOf="@+id/btnHuySuaLoaiSP" />

    <Button
        android:id="@+id/btnHuySuaLoaiSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="Hủy"
        app:layout_constraintEnd_toStartOf="@+id/btnSuaLoaiSP"
        app:layout_constraintStart_toStartOf="@+id/dgEdit_edtTenLoaiSP"
        app:layout_constraintTop_toBottomOf="@+id/dgEdit_edtTenLoaiSP" />

    <ProgressBar
        android:id="@+id/dgEdit_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSuaLoaiSP"
        app:layout_constraintStart_toEndOf="@+id/btnHuySuaLoaiSP"
        app:layout_constraintTop_toBottomOf="@+id/btnSuaLoaiSP" />

    <TextView
        android:id="@+id/dgEdit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:lines="1"
        android:text="Sửa loại sản phẩm"
        android:textColor="#C59215"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>