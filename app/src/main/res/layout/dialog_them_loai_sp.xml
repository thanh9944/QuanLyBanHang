<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/dgAdd_edtTenLoaiSP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:ellipsize="end"
        android:hint="Nhập tên loại sản phẩm muốn thêm"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dgAdd_imgLoaiSP" />

    <ImageView
        android:id="@+id/dgAdd_imgLoaiSP"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toTopOf="@+id/dgAdd_edtTenLoaiSP"
        app:layout_constraintEnd_toEndOf="@+id/dgAdd_tvTitle"
        app:layout_constraintStart_toStartOf="@+id/dgAdd_tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/dgAdd_tvTitle" />

    <Button
        android:id="@+id/btnThemLoaiSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm"
        app:layout_constraintBottom_toBottomOf="@+id/btnHuyThemLoaiSP"
        app:layout_constraintEnd_toEndOf="@+id/dgAdd_edtTenLoaiSP"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnHuyThemLoaiSP"
        app:layout_constraintTop_toTopOf="@+id/btnHuyThemLoaiSP" />

    <Button
        android:id="@+id/btnHuyThemLoaiSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Hủy"
        app:layout_constraintEnd_toStartOf="@+id/btnThemLoaiSP"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/dgAdd_edtTenLoaiSP"
        app:layout_constraintTop_toBottomOf="@+id/dgAdd_edtTenLoaiSP" />

    <ProgressBar
        android:id="@+id/dgAdd_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnThemLoaiSP"
        app:layout_constraintStart_toEndOf="@+id/btnHuyThemLoaiSP"
        app:layout_constraintTop_toBottomOf="@+id/btnThemLoaiSP" />

    <TextView
        android:id="@+id/dgAdd_tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:text="Thêm loại sản phẩm"
        android:textColor="#00796B"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>